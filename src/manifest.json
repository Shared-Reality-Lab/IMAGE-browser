{
    "manifest_version": 3,
    "name": "__MSG_extensionNameTest__",
    "version": "0.4.0",
    "description": "__MSG_extensionDescription__",
    "homepage_url": "https://image.a11y.mcgill.ca",
    "default_locale": "en",

    "icons": {
        "128": "image-icon-128.png"
    },

    "action": {
        "default_icon": "image-icon-128.png",
        "default_popup": "options/options.html"
    },

    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true,
        "browser_style": true
    },

    "permissions": [
        "contextMenus",
        "downloads",
        "storage",
        "scripting",
        "offscreen"
    ],
    "host_permissions" : ["<all_urls>"],

    "background": {
        "service_worker": "background.ts",
        "type": "module"
    },
    "commands": {
        "run-launchpad": {
            "suggested_key": {
                "default": "Alt+I"
            },
            "description": "Trigger IMAGE Launchpad"
        }
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.ts"],
        "css": ["styles.css"]
    }],

    "web_accessible_resources": [{
        "resources": [ 
            "info/*.ts",
            "info/info.html",
            "feedback/*",
            "charts/*",
            "launchpad/*",
            "firstLaunch/*",
            "maps/maps-utils.ts",
            "hAPI/hapi-utils.ts",
            "hAPI/worker.ts",
            "errors/*.html",
            "progressBar/progressBar.html",
            "audio/*",
            "offscreen.html",
            "offscreen.js"
        ],
        "matches": ["<all_urls>"]
    }],

    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
